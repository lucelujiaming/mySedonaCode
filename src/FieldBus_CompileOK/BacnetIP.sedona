  override void update()
  {
    bool isDevFound = false
    for (Component d = Sys.app.lookup(children); d != null; d = Sys.app.lookup(d.nextSibling)) {
           log.message("d.type  = $d.type.name")
      if (d.type.is(BacnetRemDev.type) && ((BacnetRemDev)d).status != BacnetRemDev.STATUSEND) {
        isDevFound = true
        break
      }
    }
    if (isDevFound) {
           log.message("status := STATUSNOREG")
      status := STATUSNOREG
    } else {
           log.message("status := STATUSNODEV")
      status := STATUSNODEV
    }
    needFlush = true
    file.name = "current_ip"
    if (!file.open("r")) return
    int size = file.size()
    file.in.readBytes(ipLocalAddress.bytes, ipLocalAddress.size, size)
    log.message("ipLocalAddress  = ${ipLocalAddress.toStr()}")
  }
  
