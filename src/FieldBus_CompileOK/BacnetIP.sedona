  {
      int ctxDouble = eD(data, value)
      if(data[0] != (double)0.0)
      {
          log.message("encodeDouble return ${value[0]}, ${value[1]} , ${value[2]} and ${value[3]} .")
          log.message("encodeDouble return ${value[4]}, ${value[5]} , ${value[6]} and ${value[7]} .")
      }
      return ctxDouble
  }

