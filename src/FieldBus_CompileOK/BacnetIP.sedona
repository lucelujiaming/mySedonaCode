  int bacnet_open(int port, int device_instance, int retry_delay)
  {
    // getBacnetCurrentDevice for each device
    for (Component d = Sys.app.lookup(children); d != null; d = Sys.app.lookup(d.nextSibling)) {
      log.message("d.type  = $d.type.name")
      if (d.type.is(BacnetRemDev.type) && ((BacnetRemDev)d).status != BacnetRemDev.STATUSEND) {
         if(((BacnetRemDev)d).bus == null)
         {
            ((BacnetRemDev)d).bus = this
         }
         ((BacnetRemDev)d).bacnetCurrentDeviceRet = ((BacnetRemDev)d).getBacnetCurrentDevice()
         if(((BacnetRemDev)d).bacnetCurrentDeviceRet == 0)
         {
            return 0
         }
      }
    }
  
    bool bRet = false;
    for (Component d = Sys.app.lookup(children); d != null; d = Sys.app.lookup(d.nextSibling)) {
      log.message("openPort::d.type  = $d.type.name")
      if (d.type.is(BacnetRemDev.type) && ((BacnetRemDev)d).status != BacnetRemDev.STATUSEND) {
         bRet = ((BacnetRemDev)d).openPort(true)
         if(bRet == false)
         {
            return 0
         }
      }
    }
    return bRet?1:0;
  }

