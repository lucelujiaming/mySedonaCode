  override int decodeUnsigned(byte[] data, int iLen, int[] value)
  {
      value[0] = 0
      for (int i = 0; i < iLen; i++)
      {
         value[0] = value[0] * 0x100 + data[i]
      }
      log.message("decodeUnsigned($iLen) return ${value[0]} and ${value[1]} .")
      return iLen
  }

