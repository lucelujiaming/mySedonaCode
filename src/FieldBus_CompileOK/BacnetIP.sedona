            // ((BacNetFieldBusIO)d).device = (bacDevice)r
              ((BacNetFieldBusIO)d).status := BacNetFieldBusIO.STATUSREADY
            }
          }
        }
    }

    ** log.message("9999 add schedule");
    // add schedule
    //

    return result
